@model cp2_enterprise.Models.Comentarios

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<div>
    <h4>Comentários</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estrelas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estrelas)
        </dd>
        <dt class = "col-sm-2">
            Autoriza o Nome?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AutorizaNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-warning">Ver todos os comentários</a>
    </form>
</div>
