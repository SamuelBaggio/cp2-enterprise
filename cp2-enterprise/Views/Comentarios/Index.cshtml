@model IEnumerable<cp2_enterprise.Models.Comentarios>

@{
    ViewData["Title"] = "Index";
}

<h1> Comentários </h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Comentário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estrelas)
            </th>
            <th>
                Nome Autorizado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estrelas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutorizaNome)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
