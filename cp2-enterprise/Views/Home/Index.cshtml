@{
    ViewData["Title"] = "Home Page";
    var coments = ViewData["coments"] as IEnumerable<cp2_enterprise.Models.Comentarios>;
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo(a)</h1>
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (var i = 0; i < coments.Count(); i++)
            {
                <li data-target="#carouselExampleCaptions" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            }
        </ol>

        <!-- Slides do Carrossel -->
        <div class="carousel-inner">
            @foreach (var coment in coments)
            {
                <div class="carousel-item @(coment == coments.First() ? "active" : "")">
                    <img src="https://conteudo.solutudo.com.br/wp-content/uploads/2019/08/autoescola-excelencia.jpeg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block" style="background-color: rgb(0, 0, 0, 0.65); padding: 1.5rem; border-radius: 15px; ">
                        <h3>
                            @(coment.Nome)
                        </h3>

                        <p>@coment.Texto</p>
                        <div>
                            <b-form-rating v-model="value" readonly></b-form-rating>
                            <div>
                                @for (var i = 0; i < coment.Estrelas; i++)
                                {
                                    <span class="fa fa-star checked" style="color: yellow"></span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>
</div>
